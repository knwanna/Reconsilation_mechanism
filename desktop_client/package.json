{
  "name": "data-reconciliation-client",
  "version": "1.0.0",
  "description": "An Electron app for reconciling data against a literary works dataset.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --linux --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.2.0"
  },
  "build": {
    "appId": "com.example.reconciliation-client",
    "productName": "Data Reconciliation Client",
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "target": ["dmg"]
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "preload.js"
    ]
  }
}
